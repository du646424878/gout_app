<html>

<head>
    <title>
        <%= article.title %>
    </title>
    <link href="/css/weui.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/wechatmain.css">
    <script src="/js/jquery.js"></script>
    <script src="/js/weui.min.js"></script>
</head>

<body>
    <div class="container" id="container">
        <div class="article">
            <div class="hd">
                <h1 class="page_title"><%= article.title %></h1>
            </div>
            <div class="bd">
                <article class="weui_article">
                    <section>
                        <%- article.content %>
                    </section>
                    <section>
                        <% 
                            var d = new Date(article.createdate);
                            var str = `${d.getFullYear()}年${d.getMonth()+1}月${d.getDate()}日 ${d.getHours()}:${d.getMinutes()}`
                         %>
                            <%- "发表于 "+str%>
                    </section>
                </article>
            </div>
        </div>
    </div>
</body>

</html>